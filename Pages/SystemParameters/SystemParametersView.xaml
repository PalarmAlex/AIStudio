<UserControl x:Class="AIStudio.Pages.SystemParametersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AIStudio.Converters"
             xmlns:converters="clr-namespace:AIStudio.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

  <UserControl.Resources>
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    <converters:DictionaryToStringConverter x:Key="DictionaryToStringConverter"/>
    <converters:StyleActivationsToStringConverter x:Key="StyleActivationsToStringConverter"/>

    <!-- Стиль для DataGridCell -->
    <Style TargetType="DataGridCell">
      <Setter Property="Padding" Value="5"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="DataGridCell">
            <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}"
                    SnapsToDevicePixels="True">
              <Grid>
                <ContentPresenter VerticalAlignment="Center" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
              </Grid>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style x:Key="MatrixButtonStyle" TargetType="Button">
      <Setter Property="Background" Value="#002000"/>
      <Setter Property="Foreground" Value="#00FF00"/>
      <Setter Property="BorderBrush" Value="#00FF00"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="10,5"/>
      <Setter Property="FontFamily" Value="Consolas"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#004000"/>
          <Setter Property="Foreground" Value="#80FF80"/>
        </Trigger>
        <Trigger Property="IsPressed" Value="True">
          <Setter Property="Background" Value="#006000"/>
        </Trigger>
        <Trigger Property="IsEnabled" Value="False">
          <Setter Property="Background" Value="#101010"/>
          <Setter Property="Foreground" Value="#808080"/>
          <Setter Property="BorderBrush" Value="#404040"/>
        </Trigger>
      </Style.Triggers>
    </Style>

  </UserControl.Resources>

  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <TextBlock Grid.Row="0" 
               Text="{Binding CurrentAgentTitle}" 
               FontSize="18"
               FontWeight="SemiBold"
               HorizontalAlignment="Center"
               Margin="0,0,0,5"
               Foreground="#FF333333"/>

    <TextBlock Grid.Row="1" 
           HorizontalAlignment="Left"
           Margin="0,0,0,5"
           Foreground="#FF333333"
           TextWrapping="Wrap"
           Height="Auto">
    <Run Text="{Binding CurrentAgentDescription.Text}"/>
    <Hyperlink Command="{Binding CurrentAgentDescription.OpenLinkCommand}">
        <Run Text="{Binding CurrentAgentDescription.LinkText}"/>
    </Hyperlink>
    </TextBlock>

    <!-- Таблица параметров -->
    <Border Grid.Row="2" 
            BorderBrush="#FFE0E0E0" 
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,5"
            MinHeight="100">
      <DataGrid x:Name="parametersDataGrid"
          ItemsSource="{Binding SystemParameters}"
          IsEnabled="True"
          IsReadOnly="{Binding IsReadOnlyMode}"
          AutoGenerateColumns="False"
          CanUserAddRows="{Binding IsEditingEnabled}"
          CanUserDeleteRows="{Binding IsEditingEnabled}"
          HeadersVisibility="Column"
          SelectionMode="Extended"
          SelectionUnit="FullRow"
          AllowDrop="True"
          BorderThickness="0"
          Background="White"
          RowBackground="#FFF9F9F9"
          AlternatingRowBackground="White"
          GridLinesVisibility="None"
          AddingNewItem="DataGrid_AddingNewItem"
          PreviewKeyDown="DataGrid_PreviewKeyDown"
          CellEditEnding="DataGrid_CellEditEnding"
          MouseDoubleClick="DataGrid_MouseDoubleClick"
          VerticalScrollBarVisibility="Auto"
          HorizontalScrollBarVisibility="Auto">
        <DataGrid.Columns>
          <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
          <DataGridTextColumn Header="Название" Binding="{Binding Name, Mode=TwoWay}" Width="*"/>

          <DataGridTextColumn Header="Описание" Binding="{Binding Description, Mode=TwoWay}" Width="*">
            <DataGridTextColumn.CellStyle>
              <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                <Setter Property="ToolTip" Value="{Binding Description}"/>
                <EventSetter Event="MouseDoubleClick" Handler="DescriptionCell_DoubleClick"/>
              </Style>
            </DataGridTextColumn.CellStyle>

            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="ToolTip" Value="ДБ клик открывает окно ввода"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
          </DataGridTextColumn>

          <DataGridTextColumn Header="Значение" Binding="{Binding Value, StringFormat=N2, Mode=TwoWay}" Width="Auto">
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" Value="Текущее значение параметра"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
            <DataGridTextColumn.EditingElementStyle>
              <Style TargetType="TextBox">
                <EventSetter Event="PreviewTextInput" Handler="NumericColumn_PreviewTextInput"/>
              </Style>
            </DataGridTextColumn.EditingElementStyle>
          </DataGridTextColumn>

          <DataGridTextColumn Header="Вес" Binding="{Binding Weight, Mode=TwoWay}" Width="Auto">
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" Value="Значимость параметра"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
            <DataGridTextColumn.EditingElementStyle>
              <Style TargetType="TextBox">
                <EventSetter Event="PreviewTextInput" Handler="NumericColumn_PreviewTextInput"/>
              </Style>
            </DataGridTextColumn.EditingElementStyle>
          </DataGridTextColumn>
          
          <DataGridTextColumn Header="Норма" Binding="{Binding NormaWell, Mode=TwoWay}" Width="Auto">
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" Value="Порог критических значений параметра"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
            <DataGridTextColumn.EditingElementStyle>
              <Style TargetType="TextBox">
                <EventSetter Event="PreviewTextInput" Handler="NumericColumn_PreviewTextInput"/>
              </Style>
            </DataGridTextColumn.EditingElementStyle>
          </DataGridTextColumn>

          <DataGridTextColumn Header="% изменения" Binding="{Binding Speed, Mode=TwoWay}" Width="Auto">
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                    Value="Скорость изменения параметра (% в час).&#x0a;Знак определяет тип параметра:&#x0a;- дефицит ориентированный &#x0a;+ избыток ориентированный &#x0a;ДБ клик запускает редактор."/>
              </Style>
            </DataGridTextColumn.HeaderStyle>

            <DataGridTextColumn.EditingElementStyle>
              <Style TargetType="TextBox">
                <EventSetter Event="PreviewTextInput" Handler="SpeedColumn_PreviewTextInput"/>
                <EventSetter Event="DataObject.Pasting" Handler="SpeedColumn_Pasting"/>
              </Style>
            </DataGridTextColumn.EditingElementStyle>
          </DataGridTextColumn>

          <DataGridTextColumn Header="Крит. мин." Binding="{Binding CriticalMinValue, Mode=TwoWay}" Width="Auto">
            <DataGridTextColumn.HeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                  <Setter Property="ToolTip" 
                    Value="Минимальное допустимое значение для жизненно важных параметров.&#x0a;Ниже приводит к смерти агента."/>
                </Style>
              </DataGridTextColumn.HeaderStyle>

              <DataGridTextColumn.EditingElementStyle>
              <Style TargetType="TextBox">
                <EventSetter Event="PreviewTextInput" Handler="NumericColumn_PreviewTextInput"/>
              </Style>
            </DataGridTextColumn.EditingElementStyle>
          </DataGridTextColumn>

          <DataGridTextColumn Header="Крит. макс." Binding="{Binding CriticalMaxValue, Mode=TwoWay}" Width="Auto">
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                    Value="Максимальное допустимое значение для жизненно важных параметров.&#x0a;Выше приводит к смерти агента."/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
           
            <DataGridTextColumn.EditingElementStyle>
              <Style TargetType="TextBox">
                <EventSetter Event="PreviewTextInput" Handler="NumericColumn_PreviewTextInput"/>
              </Style>
            </DataGridTextColumn.EditingElementStyle>
          </DataGridTextColumn>

          <DataGridTextColumn Header="Активации стилей" Width="*" IsReadOnly="True">
            <DataGridTextColumn.Binding>
              <Binding Path="StyleActivations" Converter="{StaticResource StyleActivationsToStringConverter}"/>
            </DataGridTextColumn.Binding>
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                    Value="Список стилей реагирования, запускаемых при разных диапазонах значений параметра.&#x0a;ДБ клик запускает редактор."/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
          </DataGridTextColumn>

          <DataGridTemplateColumn Header="Жизн. важный" Width="50">

            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                    Value="Флаг, указывающий что параметр является жизненно важным.&#x0a;Критические мин/макс значения только таких параметров могут вызвать 'смерть' агента."/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>
         
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <CheckBox IsChecked="{Binding IsVital}"
                IsHitTestVisible="False"
                Focusable="False"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellEditingTemplate>
              <DataTemplate>
                <CheckBox IsChecked="{Binding IsVital}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellEditingTemplate>
          </DataGridTemplateColumn>

        </DataGrid.Columns>
      </DataGrid>
    </Border>

    <!-- Кнопки управления -->
    <Grid Grid.Row="3" Margin="0,0,0,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
        <Button Content="МАТРИЦА СВЯЗЕЙ"
        Command="{Binding ShowMatrixCommand}"
        Style="{StaticResource MatrixButtonStyle}"
        Margin="8,0,20,0"
        ToolTip="Показать матрицу связей параметров и стилей"/>

        <!-- Текст предупреждения -->
        <TextBlock Grid.Column="0"
           Text="{Binding PulseWarningMessage}"
           Foreground="{Binding WarningMessageColor}"
           FontStyle="Italic"
           VerticalAlignment="Center"
           Margin="8,0,0,0"
           TextWrapping="Wrap"
           Visibility="{Binding IsEditingEnabled, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

      </StackPanel>

      <StackPanel Grid.Column="1" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right">

        <Button Content="Очистить"
                Command="{Binding RemoveAllCommand}"
                IsEnabled="{Binding IsEditingEnabled}"
                Style="{StaticResource RedButtonStyle}"
                ToolTip="Удалить все данные из таблицы"/>

        <Button Content="Сохранить" 
          Command="{Binding SaveCommand}"
          IsEnabled="{Binding IsEditingEnabled}"
          Style="{StaticResource ActionButtonStyle}"
          ToolTip="Сохранить данные гомеостаза агента"/>
      </StackPanel>
    </Grid>

  </Grid>
</UserControl>