<Window x:Class="AIStudio.Dialogs.StyleActivationsEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование активаций стилей" 
        Width="800" Height="500"
        WindowStartupLocation="CenterOwner"
        PreviewKeyDown="Window_PreviewKeyDown">
  
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <DataGrid x:Name="ActivationsGrid" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Grid.Row="0"
                  IsReadOnly="True">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Уровень" Binding="{Binding LevelName}" Width="175" IsReadOnly="True"/>
        
        <DataGridTextColumn Header="Активируемые стили" Binding="{Binding ActivateStylesText}" Width="*">
          <DataGridTextColumn.CellStyle>
            <Style TargetType="DataGridCell">
              <EventSetter Event="MouseDoubleClick" Handler="ActivateStylesCell_DoubleClick"/>
            </Style>
          </DataGridTextColumn.CellStyle>
          <DataGridTextColumn.HeaderStyle>
            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
              <Setter Property="ToolTip" Value="Двойной клик открывает окно редактора"/>
            </Style>
          </DataGridTextColumn.HeaderStyle>
        </DataGridTextColumn>
        
        <DataGridTextColumn Header="Деактивируемые стили" Binding="{Binding DeactivateStylesText}" Width="*">
          <DataGridTextColumn.CellStyle>
            <Style TargetType="DataGridCell">
              <EventSetter Event="MouseDoubleClick" Handler="DeactivateStylesCell_DoubleClick"/>
            </Style>
          </DataGridTextColumn.CellStyle>
          <DataGridTextColumn.HeaderStyle>
            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
              <Setter Property="ToolTip" Value="Двойной клик открывает окно редактора"/>
            </Style>
          </DataGridTextColumn.HeaderStyle>
        </DataGridTextColumn>
        
      </DataGrid.Columns>
    </DataGrid>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Content="Сохранить" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
      <Button Content="Отмена" Width="100" Click="CancelButton_Click"/>
    </StackPanel>
  </Grid>
</Window>
