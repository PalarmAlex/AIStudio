<UserControl x:Class="AIStudio.Pages.ParametersStylesMatrixView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:AIStudio.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

  <UserControl.Resources>
    <converters:ParametersStylesColumnsConverter x:Key="ParametersStylesColumnsConverter"/>
    <converters:CollectionCountToVisibilityConverter x:Key="CollectionCountToVisibilityConverter"/>

    <Style x:Key="MatrixTextStyle" TargetType="TextBlock">
      <Setter Property="FontFamily" Value="Consolas, Courier New"/>
      <Setter Property="FontSize" Value="11"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="MatrixButtonStyle" TargetType="Button">
      <Setter Property="Background" Value="#002000"/>
      <Setter Property="Foreground" Value="#00FF00"/>
      <Setter Property="BorderBrush" Value="#00FF00"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="10,5"/>
      <Setter Property="FontFamily" Value="Consolas"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="2">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#004000"/>
          <Setter Property="Foreground" Value="#80FF80"/>
        </Trigger>
        <Trigger Property="IsPressed" Value="True">
          <Setter Property="Background" Value="#006000"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <!-- Стиль ComboBox с белым фоном -->
    <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
      <Setter Property="Background" Value="White"/>
      <Setter Property="BorderBrush" Value="#00FF00"/>
      <Setter Property="BorderThickness" Value="2"/>
      <Setter Property="FontFamily" Value="Consolas"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Padding" Value="8,6"/>
      <Setter Property="Height" Value="35"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для элементов списка с белым фоном и темно-зеленым текстом -->
    <Style x:Key="ComboBoxItemStyle" TargetType="ComboBoxItem">
      <Setter Property="Background" Value="White"/>
      <Setter Property="Foreground" Value="#006400"/>
      <!-- Темно-зеленый цвет -->
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="FontFamily" Value="Consolas"/>
      <Setter Property="FontSize" Value="13"/>
      <Setter Property="Padding" Value="10,6"/>
      <Style.Triggers>
        <Trigger Property="IsHighlighted" Value="True">
          <Setter Property="Background" Value="#F0F0F0"/>
          <!-- Светло-серый при наведении -->
          <Setter Property="Foreground" Value="#006400"/>
          <!-- Остается темно-зеленым -->
        </Trigger>
        <Trigger Property="IsSelected" Value="True">
          <Setter Property="Background" Value="#E0E0E0"/>
          <!-- Серый для выбранного -->
          <Setter Property="Foreground" Value="#006400"/>
          <!-- Остается темно-зеленым -->
        </Trigger>
      </Style.Triggers>
    </Style>

  </UserControl.Resources>

  <Grid Background="Black">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <Border Grid.Row="0" Background="#101010" Padding="10" BorderBrush="#00FF00" BorderThickness="0,0,0,1">
      <StackPanel Orientation="Horizontal">
        <Button Content="← НАЗАД" 
                Command="{Binding BackCommand}"
                Style="{StaticResource MatrixButtonStyle}"
                Margin="0,0,20,0"/>

        <TextBlock Text="МАТРИЦА СВЯЗЕЙ ПАРАМЕТРОВ И СТИЛЕЙ" 
                   Foreground="#00FF00"
                   FontFamily="Consolas, Courier New"
                   FontSize="16"
                   FontWeight="Bold"
                   VerticalAlignment="Center"/>
      </StackPanel>
    </Border>

    <!-- Фильтр стилей -->
    <Border Grid.Row="1" Background="#101010" Padding="10" BorderBrush="#00FF00" BorderThickness="0,0,0,1">
      <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <TextBlock Text="Фильтр по стилю:" 
                   Foreground="#00FF00"
                   FontFamily="Consolas"
                   FontSize="14"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>

        <ComboBox ItemsSource="{Binding StyleFilterItems}"
                  SelectedItem="{Binding SelectedStyleFilter}"
                  Style="{StaticResource ComboBoxStyle}"
                  ItemContainerStyle="{StaticResource ComboBoxItemStyle}"
                  Width="350"
                  Height="35"
                  ToolTip="Выберите стиль для подсветки ячеек"
                  Margin="0,0,20,0">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding}" 
                             Foreground="#006400"
                             FontFamily="Consolas"
                             FontSize="14"/>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Фильтр по группам стилей -->
        <TextBlock Text="Фильтр по группам:" 
                   Foreground="#00FF00"
                   FontFamily="Consolas"
                   FontSize="14"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>

        <ComboBox ItemsSource="{Binding StyleGroupFilterItems}"
                  SelectedItem="{Binding SelectedStyleGroupFilter}"
                  Style="{StaticResource ComboBoxStyle}"
                  ItemContainerStyle="{StaticResource ComboBoxItemStyle}"
                  Width="400"
                  Height="35"
                  ToolTip="Выберите группу стилей для подсветки дубликатов">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding}" 
                             Foreground="#006400"
                             FontFamily="Consolas"
                             FontSize="14"/>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
      </StackPanel>
    </Border>

    <!-- Матрица -->
    <ScrollViewer Grid.Row="2" 
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Auto"
                  Background="Black">
      <ItemsControl ItemsSource="{Binding MatrixCells}" 
                    Background="Black"
                    BorderThickness="0">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <UniformGrid Columns="{Binding MatrixCells.Count, Converter={StaticResource ParametersStylesColumnsConverter}}"
                         Background="Black"/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Width="120" Height="60"
                    Background="{Binding BackgroundColor}"
                    BorderBrush="{Binding BorderColor}"
                    BorderThickness="1"
                    ToolTip="{Binding ToolTip}"
                    MouseDown="MatrixCell_MouseDown">
              <TextBlock Text="{Binding Content}" 
                         Foreground="{Binding TextColor}"
                         FontFamily="Consolas, Courier New"
                         FontSize="14"
                         FontWeight="Normal"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         TextWrapping="Wrap"
                         Margin="2"/>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>

    <!-- Легенда -->
    <Border Grid.Row="3" Background="#101010" Padding="10" BorderBrush="#00FF00" BorderThickness="0,1,0,0">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
          <Border Width="20" Height="20" BorderBrush="#00FF00" BorderThickness="1" Background="#005000" Margin="0,0,5,0"/>
          <TextBlock Text="Стили назначены" Foreground="#00FF00" FontFamily="Consolas" FontSize="12"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
          <Border Width="20" Height="20" BorderBrush="#00FF00" BorderThickness="1" Background="#808000" Margin="0,0,5,0"/>
          <TextBlock Text="Выбранный стиль" Foreground="#00FF00" FontFamily="Consolas" FontSize="12"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
          <Border Width="20" Height="20" BorderBrush="#00FF00" BorderThickness="1" Background="#0050A0" Margin="0,0,5,0"/>
          <TextBlock Text="Дублирующиеся группы" Foreground="#00FF00" FontFamily="Consolas" FontSize="12"/>
        </StackPanel>
      </StackPanel>
    </Border>

  </Grid>
</UserControl>