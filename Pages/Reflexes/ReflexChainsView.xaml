<UserControl x:Class="AIStudio.Pages.Reflexes.ReflexChainsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">

  <UserControl.Resources>
    <Style x:Key="FilterTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource AgentFilterTextBoxStyle}">
      <Setter Property="Margin" Value="0,0,15,0"/>
      <Setter Property="Width" Value="140"/>
      <Setter Property="Height" Value="25"/>
    </Style>
  </UserControl.Resources>

  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0"
               Text="Цепочки безусловных рефлексов"
               FontSize="18"
               FontWeight="SemiBold"
               HorizontalAlignment="Center"
               Margin="0,0,0,15"
               Foreground="#FF333333"/>

    <Border Grid.Row="1"
            BorderBrush="#FFBFD7F0"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,10"
            Padding="10"
            Background="#FFEFF7FF">
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Фильтры:"
                   VerticalAlignment="Center"
                   Margin="0,0,15,0"
                   FontWeight="Bold"/>

        <StackPanel Orientation="Vertical" Margin="0,0,15,0">
          <TextBlock Text="ID рефлекса" FontSize="12" Margin="0,0,0,2"/>
          <TextBox Style="{StaticResource FilterTextBoxStyle}"
                   Text="{Binding FilterReflexId, UpdateSourceTrigger=PropertyChanged}"
                   ToolTip="Показать цепочки, привязанные к конкретному безусловному рефлексу"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,15,0">
          <TextBlock Text="ID цепочки" FontSize="12" Margin="0,0,0,2"/>
          <TextBox Style="{StaticResource FilterTextBoxStyle}"
                   Text="{Binding FilterChainId, UpdateSourceTrigger=PropertyChanged}"
                   ToolTip="Фильтр по ID цепочки"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,15,0">
          <TextBlock Text="Действие" FontSize="12" Margin="0,0,0,2"/>
          <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                    Width="200"
                    Height="25"
                    ItemsSource="{Binding ActionFilterOptions}"
                    SelectedValue="{Binding SelectedActionFilterId}"
                    DisplayMemberPath="Value"
                    SelectedValuePath="Key"
                    ToolTip="Фильтр по действию звена"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,15,0">
          <TextBlock Text="Название" FontSize="12" Margin="0,0,0,2"/>
          <TextBox Style="{StaticResource FilterTextBoxStyle}"
                   Width="220"
                   Text="{Binding FilterChainName, UpdateSourceTrigger=PropertyChanged}"
                   ToolTip="Фильтр по названию цепочки"/>
        </StackPanel>

        <Button Content="Сбросить фильтры"
                Command="{Binding ClearFiltersCommand}"
                Style="{StaticResource AgentButtonStyle}"
                Margin="10,15,0,0"
                Height="30"
                Width="150"
                Cursor="Hand"
                HorizontalAlignment="Right"/>
      </StackPanel>
    </Border>

    <Border Grid.Row="2"
            BorderBrush="#FFE0E0E0"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,10">
      <DataGrid ItemsSource="{Binding ChainsView}"
                IsReadOnly="True"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                SelectionMode="Extended"
                BorderThickness="0"
                Background="White"
                RowBackground="#FFF9F9F9"
                AlternatingRowBackground="White"
                GridLinesVisibility="None"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                ColumnWidth="Auto">
        <DataGrid.Columns>
          <DataGridTextColumn Header="ID цепочки"
                              Binding="{Binding ChainId}"
                              Width="Auto">
            <DataGridTextColumn.ElementStyle>
              <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
              </Style>
            </DataGridTextColumn.ElementStyle>
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="ToolTip" Value="Уникальный идентификатор цепочки безусловных рефлексов"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
          </DataGridTextColumn>

          <DataGridTemplateColumn Header="Привязанные рефлексы" Width="*">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding ReflexIdsText}"
                           TextWrapping="Wrap"
                           ToolTip="{Binding ReflexIdsTooltip}">
                  <TextBlock.Style>
                    <Style TargetType="TextBlock">
                      <Setter Property="FontStyle" Value="Normal"/>
                      <Style.Triggers>
                        <DataTrigger Binding="{Binding ReflexIdsText}" Value="">
                          <Setter Property="Text" Value="нет"/>
                          <Setter Property="FontStyle" Value="Italic"/>
                          <Setter Property="Foreground" Value="Gray"/>
                        </DataTrigger>
                      </Style.Triggers>
                    </Style>
                  </TextBlock.Style>
                </TextBlock>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="ToolTip" Value="Список ID безусловных рефлексов, к которым привязана цепочка"/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>
          </DataGridTemplateColumn>

          <DataGridTextColumn Header="ID звена"
                              Binding="{Binding LinkId}"
                              Width="Auto">
            <DataGridTextColumn.ElementStyle>
              <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
              </Style>
            </DataGridTextColumn.ElementStyle>
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="ToolTip" Value="Идентификатор звена внутри цепочки"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
          </DataGridTextColumn>

          <DataGridTemplateColumn Header="Действие" Width="150">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding ActionText}"
                           TextWrapping="Wrap"
                           ToolTip="{Binding ActionTooltip}"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="ToolTip" Value="Адаптивное действие, выполняемое в этом звене"/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>
          </DataGridTemplateColumn>

          <DataGridTemplateColumn Header="Название цепочки" Width="160">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding ChainName}"
                           TextWrapping="Wrap"
                           ToolTip="{Binding ChainDescription}"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="ToolTip" Value="Название цепочки (в подсказке - описание цепочки)"/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>
          </DataGridTemplateColumn>

          <DataGridTextColumn Header="Шаг успех"
                              Binding="{Binding SuccessNextLink}"
                              Width="Auto">
            <DataGridTextColumn.ElementStyle>
              <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
              </Style>
            </DataGridTextColumn.ElementStyle>
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="ToolTip" Value="ID следующего звена при успешном выполнении (0 - конец)"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
          </DataGridTextColumn>

          <DataGridTextColumn Header="Шаг неудача"
                              Binding="{Binding FailureNextLink}"
                              Width="Auto">
            <DataGridTextColumn.ElementStyle>
              <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
              </Style>
            </DataGridTextColumn.ElementStyle>
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="ToolTip" Value="ID следующего звена при неудачном выполнении (0 - конец)"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
          </DataGridTextColumn>
        </DataGrid.Columns>
      </DataGrid>
    </Border>

    <TextBlock Grid.Row="3"
               Text="Таблица только для чтения. Показывает структуру цепочек и связи с безусловными рефлексами."
               Foreground="Gray"
               FontStyle="Italic"
               VerticalAlignment="Center"
               TextWrapping="Wrap"/>
  </Grid>
</UserControl>
