<UserControl x:Class="AIStudio.Pages.Reflexes.GeneticReflexesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIStudio.Pages.Reflexes"
             xmlns:converters="clr-namespace:AIStudio.Converters"
             xmlns:common="clr-namespace:AIStudio.Common"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  <UserControl.Resources>
    <converters:ListToStringConverter x:Key="ListToStringConverter"/>
    <converters:IntDictionaryToStringConverter x:Key="IntDictionaryToStringConverter"/>
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    <converters:Level1ToTextConverter x:Key="Level1ToTextConverter"/>
    <converters:WordIdToTextConverter x:Key="WordIdToTextConverter"/>
    <converters:IdListToNamesConverter x:Key="IdListToNamesConverter"/>
    <converters:ReflexChainDetailTooltipConverter x:Key="ReflexChainDetailTooltipConverter"/>

    <Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
      <Setter Property="Background" Value="White"/>
      <Style.Triggers>
        <Trigger Property="Validation.HasError" Value="true">
          <Setter Property="Background" Value="#FFFDE6E6"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <Style x:Key="BaseTextBoxStyle" TargetType="TextBox">
      <Setter Property="Background" Value="White"/>
      <Style.Triggers>
        <Trigger Property="Validation.HasError" Value="true">
          <Setter Property="Background" Value="#FFFDE6E6"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <!-- Контекстное меню для ячеек с цепочками -->
    <ContextMenu x:Key="ChainContextMenu" x:Shared="False">
      <MenuItem Header="Добавить цепочку" 
              Click="AddChainMenuItem_Click"
              ToolTip="Создать новую цепочку">
        <MenuItem.Icon>
          <Image Source="/AIStudio;component/Resources/Add.ico" Width="16" Height="16"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="Управление цепочками" 
              Click="AttachChainMenuItem_Click"
              ToolTip="Привязать существующую цепочку">
        <MenuItem.Icon>
          <Image Source="/AIStudio;component/Resources/activate.png" Width="16" Height="16"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="Редактировать цепочку" 
              Click="EditChainMenuItem_Click"
              ToolTip="Открыть редактор привязанной цепочки">
        <MenuItem.Icon>
          <Image Source="/AIStudio;component/Resources/Modify.png" Width="16" Height="16"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="Отвязать цепочку" 
              Click="DetachChainMenuItem_Click"
              ToolTip="Удалить привязку цепочки к рефлексу">
        <MenuItem.Icon>
          <Image Source="/AIStudio;component/Resources/deactivate.png" Width="16" Height="16"/>
        </MenuItem.Icon>
      </MenuItem>
    </ContextMenu>

  </UserControl.Resources>

  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <TextBlock Grid.Row="0" 
               Text="{Binding CurrentAgentTitle}" 
               FontSize="18"
               FontWeight="SemiBold"
               HorizontalAlignment="Center"
               Margin="0,0,0,5"
               Foreground="#FF333333"/>

    <TextBlock Grid.Row="1" 
           HorizontalAlignment="Left"
           Margin="0,0,0,5"
           Foreground="#FF333333"
           TextWrapping="Wrap"
           Height="Auto">
    <Run Text="{Binding CurrentAgentDescription.Text}"/>
    <Hyperlink Command="{Binding CurrentAgentDescription.OpenLinkCommand}">
        <Run Text="{Binding CurrentAgentDescription.LinkText}"/>
    </Hyperlink>
    </TextBlock>

    <!-- Панель фильтров -->
    <Border Grid.Row="2" 
            BorderBrush="#FFE0E0E0" 
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,10"
            Padding="5"
            Background="#FFF5F5F5">
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Фильтры:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0"
                   FontWeight="Bold"/>

        <!-- Фильтр по интегральному состоянию -->
        <StackPanel Orientation="Vertical" Margin="0,0,15,0" Width="140">
          <TextBlock Text="Интегральное состояние" FontSize="12" Margin="0,0,0,2"/>
          <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                    ItemsSource="{Binding Level1FilterOptions}"
                    SelectedValue="{Binding SelectedLevel1Filter}"                   
                    DisplayMemberPath="Value"
                    SelectedValuePath="Key"
                    Height="25" Cursor="Hand"/>
        </StackPanel>

        <!-- Фильтр по контекстам реагирования -->
        <StackPanel Orientation="Vertical" Margin="0,0,15,0" Width="150">
          <TextBlock Text="Контексты реагирования" FontSize="12" Margin="0,0,0,2"/>
          <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                    ItemsSource="{Binding Level2FilterOptions}"
                    SelectedValue="{Binding SelectedLevel2Filter}"
                    DisplayMemberPath="Value"
                    SelectedValuePath="Key"
                    Height="25"/>
        </StackPanel>

        <!-- Фильтр по внешним воздействиям -->
        <StackPanel Orientation="Vertical" Margin="0,0,15,0" Width="160">
          <TextBlock Text="Внешние воздействия" FontSize="12" Margin="0,0,0,2"/>
          <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                    ItemsSource="{Binding Level3FilterOptions}"
                    SelectedValue="{Binding SelectedLevel3Filter}"
                    DisplayMemberPath="Value"
                    SelectedValuePath="Key"
                    Height="25"/>
        </StackPanel>

        <!-- Фильтр по адаптивным действиям -->
        <StackPanel Orientation="Vertical" Margin="0,0,15,0" Width="150">
          <TextBlock Text="Адаптивные действия" FontSize="12" Margin="0,0,0,2"/>
          <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                    ItemsSource="{Binding AdaptiveActionsFilterOptions}"
                    SelectedValue="{Binding SelectedAdaptiveActionsFilter}"
                    DisplayMemberPath="Value"
                    SelectedValuePath="Key"
                    Height="25"/>
        </StackPanel>

        <!-- Записей на страницу -->
        <StackPanel Orientation="Vertical" Margin="0,0,15,0" Width="130">
          <TextBlock Text="Записей на страницу" FontSize="12" Margin="0,0,0,2"/>
          <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                    ItemsSource="{Binding PageSizeOptions}"
                    SelectedValue="{Binding SelectedPageSize}"
                    DisplayMemberPath="Value"
                    SelectedValuePath="Key"
                    Height="25"
                    ToolTip="Ограничить количество отображаемых записей"/>
        </StackPanel>

        <!-- Кнопка сброса фильтров -->
        <Button Content="Сбросить фильтры" 
                Command="{Binding ClearFiltersCommand}"
                Style="{StaticResource AgentButtonStyle}"
                Margin="10,15,0,0"
                Height="30"
                Width="150" Cursor="Hand"
                HorizontalAlignment="Right"/>
      </StackPanel>
    </Border>

    <Border Grid.Row="3" 
        BorderBrush="#FFE0E0E0" 
        BorderThickness="1"
        CornerRadius="4"
        Margin="0,0,0,5">
      <DataGrid ItemsSource="{Binding GeneticReflexesView}"
        x:Name="GeneticReflexesGrid"
        IsEnabled="True"
        IsReadOnly="{Binding IsReadOnlyMode}"
        AutoGenerateColumns="False"
        CanUserAddRows="{Binding IsEditingEnabled}"
        CanUserDeleteRows="{Binding IsEditingEnabled}"
        SelectionMode="Extended"
        BorderThickness="0"
        Background="White"
        RowBackground="#FFF9F9F9"
        AlternatingRowBackground="White"
        GridLinesVisibility="None"
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Auto"
        PreviewKeyDown="DataGrid_PreviewKeyDown"
        RowEditEnding="DataGrid_RowEditEnding"
        AddingNewItem="DataGrid_AddingNewItem">

        <DataGrid.Columns>
          <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>

          <!-- Интегральное состояние - комбобокс -->
          <DataGridTemplateColumn Header="Интегральное состояние" Width="Auto" 
                       CanUserSort="True" SortMemberPath="Level1">
            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" Value="Первый уровень дерева триггера рефлекса: Интегральное базовое состояние гомеостаза"/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Level1, Converter={StaticResource Level1ToTextConverter}}"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellEditingTemplate>
              <DataTemplate>
                <ComboBox ItemsSource="{Binding DataContext.Level1Options, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 SelectedValue="{Binding Level1}"
                 DisplayMemberPath="Value"
                 SelectedValuePath="Key"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellEditingTemplate>
          </DataGridTemplateColumn>

          <!-- Контексты реагирования -->
          <DataGridTemplateColumn Header="Контексты реагирования" Width="250" 
                       CanUserSort="True" SortMemberPath="Level2">

            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                Value="Второй уровень дерева триггера рефлекса: Контексты реагирования.&#x0a;ДБ клик открывает окно ввода."/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>

            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Level2, Converter={StaticResource IdListToNamesConverter}, ConverterParameter='Level2'}"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellStyle>
              <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                <EventSetter Event="MouseDoubleClick" Handler="Level2Cell_DoubleClick"/>
              </Style>
            </DataGridTemplateColumn.CellStyle>
          </DataGridTemplateColumn>

          <!-- Внешние стимулы -->
          <DataGridTemplateColumn Header="Внешние стимулы" Width="250" 
                       CanUserSort="True" SortMemberPath="Level3">

            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                Value="Третий уровень дерева триггера рефлекса: Гомеостатические воздействия.&#x0a;ДБ клик открывает окно ввода."/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>

            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Level3, Converter={StaticResource IdListToNamesConverter}, ConverterParameter='Level3'}"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellStyle>
              <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                <EventSetter Event="MouseDoubleClick" Handler="Level3Cell_DoubleClick"/>
              </Style>
            </DataGridTemplateColumn.CellStyle>
          </DataGridTemplateColumn>

          <!-- Адаптивные действия -->
          <DataGridTemplateColumn Header="Адаптивные действия" Width="*" 
                       CanUserSort="True" SortMemberPath="AdaptiveActions">

            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                Value="Действия запускаемые рефлексом.&#x0a;ДБ клик открывает окно ввода."/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>

            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding AdaptiveActions, Converter={StaticResource IdListToNamesConverter}, ConverterParameter='AdaptiveActions'}"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellStyle>
              <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                <EventSetter Event="MouseDoubleClick" Handler="AdaptiveActionsCell_DoubleClick"/>
              </Style>
            </DataGridTemplateColumn.CellStyle>
          </DataGridTemplateColumn>

          <!-- Цепочки -->
          <DataGridTemplateColumn Header="Цепочка" Width="100">
            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip"
                    Value="Цепочка рефлексов для данной комбинации триггера.&#x0a;Последовательность адаптивных действий при срабатывании рефлекса."/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock ToolTipService.ShowDuration="60000">
                  <TextBlock.Style>
                    <Style TargetType="TextBlock">
                      <Setter Property="Text" Value="{Binding ReflexChainID}"/>
                      <Setter Property="ToolTip">
                        <Setter.Value>
                          <MultiBinding Converter="{StaticResource ReflexChainDetailTooltipConverter}">
                            <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="DataContext"/>
                            <Binding Path="ReflexChainID"/>
                          </MultiBinding>
                        </Setter.Value>
                      </Setter>
                      <Style.Triggers>
                        <DataTrigger Binding="{Binding ReflexChainID}" Value="0">
                          <Setter Property="Text" Value="Нет"/>
                          <Setter Property="Foreground" Value="Gray"/>
                          <Setter Property="FontStyle" Value="Italic"/>
                          <Setter Property="ToolTip" Value="Цепочка не привязана"/>
                        </DataTrigger>
                      </Style.Triggers>
                    </Style>
                  </TextBlock.Style>
                </TextBlock>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellStyle>
              <Style TargetType="DataGridCell">
                <EventSetter Event="MouseDoubleClick" Handler="ChainCell_DoubleClick"/>
                <EventSetter Event="PreviewMouseRightButtonDown" Handler="ChainCell_MouseRightButtonDown"/>
                <Setter Property="ContextMenu" Value="{StaticResource ChainContextMenu}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="ToolTipService.ShowDuration" Value="60000"/>
              </Style>
            </DataGridTemplateColumn.CellStyle>
          </DataGridTemplateColumn>

        </DataGrid.Columns>
      </DataGrid>
    </Border>

    <!-- Кнопки управления -->
    <Grid Grid.Row="4" Margin="0,0,0,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Левая часть - счётчик, кнопка «Создать по тексту» и текст предупреждения -->
      <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
        <TextBlock Text="{Binding DisplayCountText}"
                   Margin="0,0,15,0"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"/>
        <Button Content="Создать по шаблону"
            Command="{Binding LoadFromFileCommand}"
            IsEnabled="{Binding IsLoadFromFileEnabled}"
            Style="{StaticResource AgentButtonStyle}"
            ToolTip="Создать рефлексы и цепочки из файла (формат: Состояние|Стили|Триггер|Действие|Цепочка)"
            Margin="8,0,15,0"
            Height="30"
            Cursor="Hand"/>
        <!-- Текст предупреждения -->
        <TextBlock Text="{Binding PulseWarningMessage}"
                     Foreground="{Binding WarningMessageColor}"
                     FontStyle="Italic"
                     VerticalAlignment="Center"
                     TextWrapping="Wrap"
                     Visibility="{Binding IsEditingEnabled, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
      </StackPanel>

      <!-- Правая часть - кнопки очистки и сохранения -->
      <StackPanel Grid.Column="1" 
            Orientation="Horizontal" 
            HorizontalAlignment="Right">
        <Button Content="Очистить"
            Command="{Binding RemoveAllCommand}"
            IsEnabled="{Binding IsEditingEnabled}"
            Style="{StaticResource RedButtonStyle}"
            ToolTip="Удалить все данные из таблицы, дерево рефлексов и цепочки"
            Margin="0,0,8,0"/>
        <Button Content="Сохранить" 
            Command="{Binding SaveCommand}"
            IsEnabled="{Binding IsEditingEnabled}"
            Style="{StaticResource ActionButtonStyle}"
            ToolTip="Сохранить данные" Cursor="Hand"/>
      </StackPanel>
    </Grid>

  </Grid>

</UserControl>