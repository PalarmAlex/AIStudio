 <UserControl x:Class="AIStudio.Pages.Reflexes.ConditionedReflexesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIStudio.Pages.Reflexes"
             xmlns:converters="clr-namespace:AIStudio.Converters"
             xmlns:common="clr-namespace:AIStudio.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  <UserControl.Resources>
    <converters:ListToStringConverter x:Key="ListToStringConverter"/>
    <converters:IntDictionaryToStringConverter x:Key="IntDictionaryToStringConverter"/>
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    <converters:Level1ToTextConverter x:Key="Level1ToTextConverter"/>
    <converters:IdListToNamesConverter x:Key="IdListToNamesConverter"/>
    <converters:PerceptionImageIdToTextConverter x:Key="PerceptionImageIdToTextConverter"/>
    <converters:PerceptionImageIdToTooltipConverter x:Key="PerceptionImageIdToTooltipConverter"/>
    <converters:ConditionedReflexPerceptionTooltipConverter x:Key="ConditionedReflexPerceptionTooltipConverter"/>

    <Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
      <Setter Property="Background" Value="White"/>
      <Style.Triggers>
        <Trigger Property="Validation.HasError" Value="true">
          <Setter Property="Background" Value="#FFFDE6E6"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <Style x:Key="BaseTextBoxStyle" TargetType="TextBox">
      <Setter Property="Background" Value="White"/>
      <Style.Triggers>
        <Trigger Property="Validation.HasError" Value="true">
          <Setter Property="Background" Value="#FFFDE6E6"/>
        </Trigger>
      </Style.Triggers>
    </Style>

  </UserControl.Resources>

  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <TextBlock Grid.Row="0" 
                   Text="{Binding CurrentAgentTitle}" 
                   FontSize="18"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"
                   Foreground="#FF333333"/>

    <TextBlock Grid.Row="1" 
           HorizontalAlignment="Left"
           Margin="0,0,0,5"
           Foreground="#FF333333"
           TextWrapping="Wrap"
           Height="Auto">
    <Run Text="{Binding CurrentAgentDescription.Text}"/>
    <Hyperlink Command="{Binding CurrentAgentDescription.OpenLinkCommand}">
        <Run Text="{Binding CurrentAgentDescription.LinkText}"/>
    </Hyperlink>
    </TextBlock>

    <!-- Панель фильтров: 2 строки, кнопка Применить по примеру AutomatizmsView -->
    <Border Grid.Row="2" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,10"
                Padding="5"
                Background="#FFF5F5F5">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" 
                   Text="Фильтры:" 
                   VerticalAlignment="Top"
                   Margin="0,6,12,0"
                   FontWeight="Bold"/>

        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left">
          <!-- Строка 1 -->
          <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Width="140">
              <TextBlock Text="Интегральное состояние" FontSize="12" Margin="0,0,0,2"/>
              <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                        ItemsSource="{Binding Level1FilterOptions}"
                        SelectedValue="{Binding SelectedLevel1Filter}"
                        DisplayMemberPath="Value"
                        SelectedValuePath="Key"
                        Height="25" Cursor="Hand"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Width="150">
              <TextBlock Text="Контексты реагирования" FontSize="12" Margin="0,0,0,2"/>
              <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                        ItemsSource="{Binding Level2FilterOptions}"
                        SelectedValue="{Binding SelectedLevel2Filter}"
                        DisplayMemberPath="Value"
                        SelectedValuePath="Key"
                        Height="25"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Width="150">
              <TextBlock Text="Образы восприятия" FontSize="12" Margin="0,0,0,2"/>
              <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                        ItemsSource="{Binding Level3FilterOptions}"
                        SelectedValue="{Binding SelectedLevel3Filter}"
                        DisplayMemberPath="Value"
                        SelectedValuePath="Key"
                        Height="25"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Width="150">
              <TextBlock Text="Адаптивные действия" FontSize="12" Margin="0,0,0,2"/>
              <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                        ItemsSource="{Binding AdaptiveActionsFilterOptions}"
                        SelectedValue="{Binding SelectedAdaptiveActionsFilter}"
                        DisplayMemberPath="Value"
                        SelectedValuePath="Key"
                        Height="25"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Width="130">
              <TextBlock Text="Записей на страницу" FontSize="12" Margin="0,0,0,2"/>
              <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                        ItemsSource="{Binding PageSizeOptions}"
                        SelectedValue="{Binding SelectedPageSize}"
                        DisplayMemberPath="Value"
                        SelectedValuePath="Key"
                        Height="25"
                        ToolTip="Ограничить количество отображаемых записей"/>
            </StackPanel>
          </StackPanel>
          <!-- Строка 2: Тон, Настроение, Фраза триггера -->
          <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Width="150">
              <TextBlock Text="Тон" FontSize="12" Margin="0,0,0,2"/>
              <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                        ItemsSource="{Binding ToneFilterOptions}"
                        SelectedValue="{Binding SelectedToneFilter}"
                        DisplayMemberPath="Value"
                        SelectedValuePath="Key"
                        Height="25"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Width="150">
              <TextBlock Text="Настроение" FontSize="12" Margin="0,0,0,2"/>
              <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                        ItemsSource="{Binding MoodFilterOptions}"
                        SelectedValue="{Binding SelectedMoodFilter}"
                        DisplayMemberPath="Value"
                        SelectedValuePath="Key"
                        Height="25"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Width="150">
              <TextBlock Text="Фраза триггера" FontSize="12" Margin="0,0,0,2"/>
              <TextBox Style="{StaticResource AgentFilterTextBoxStyle}"
                      Text="{Binding FilterTriggerPhraseInput, UpdateSourceTrigger=PropertyChanged}"
                      Height="25" Width="150"
                      ToolTip="Поиск по вхождению текста в фразу образа восприятия. Нажмите «Применить» для фильтрации."/>
            </StackPanel>
          </StackPanel>
        </StackPanel>

        <Grid Grid.Column="2" VerticalAlignment="Stretch" Margin="12,0,0,0" Width="150">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <Button Grid.Row="0" Content="Применить"
                  Command="{Binding ApplyFiltersCommand}"
                  Style="{StaticResource AgentButtonStyle}"
                  Margin="0,15,0,6"
                  Height="30"
                  Width="150"
                  Cursor="Hand"
                  HorizontalAlignment="Left"
                  ToolTip="Применить фильтры по фразе триггера, тону и настроению"/>
          <TextBlock Grid.Row="1" Text=" " FontSize="1" VerticalAlignment="Center"/>
          <Button Grid.Row="2" Content="Сбросить фильтры" 
                  Command="{Binding ClearFiltersCommand}"
                  Style="{StaticResource AgentButtonStyle}"
                  Height="30"
                  Width="150"
                  Cursor="Hand"
                  HorizontalAlignment="Left" Margin="0,0,0,0"/>
        </Grid>
      </Grid>
    </Border>

    <Border Grid.Row="3" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,5">

      <DataGrid ItemsSource="{Binding ConditionedReflexesView}"
          x:Name="ConditionedReflexesGrid"
          IsEnabled="True"
          IsReadOnly="True"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          SelectionMode="Extended"
          BorderThickness="0"
          Background="White"
          RowBackground="#FFF9F9F9"
          AlternatingRowBackground="White"
          GridLinesVisibility="None"
          VerticalScrollBarVisibility="Auto"
          HorizontalScrollBarVisibility="Auto"
          PreviewKeyDown="DataGrid_PreviewKeyDown">

        <DataGrid.Columns>
          <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>

          <!-- Интегральное состояние -->
          <DataGridTemplateColumn Header="Состояние" Width="Auto">
            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" Value="Первый уровень дерева триггера рефлекса: Интегральное базовое состояние гомеостаза"/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Level1, Converter={StaticResource Level1ToTextConverter}}"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>

          <!-- Контексты реагирования -->
          <DataGridTemplateColumn Header="Контексты реагирования" Width="200">
            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                Value="Второй уровень дерева триггера рефлекса: Контексты реагирования"/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>

            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Level2, Converter={StaticResource IdListToNamesConverter}, ConverterParameter='Level2'}"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>

          <!--Образ восприятия-->
          <DataGridTemplateColumn Header="Образ восприятия" Width="200">
            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                Value="Третий уровень дерева триггера рефлекса: Образы восприятия"/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>

            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Level3, Converter={StaticResource PerceptionImageIdToTextConverter}}">
                  <TextBlock.ToolTip>
                    <MultiBinding Converter="{StaticResource ConditionedReflexPerceptionTooltipConverter}">
                      <Binding Path="Level3"/>
                      <Binding Path="ToneId"/>
                      <Binding Path="MoodId"/>
                    </MultiBinding>
                  </TextBlock.ToolTip>
                </TextBlock>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>

          <!--Адаптивные действия -->
          <DataGridTemplateColumn Header="Действия исходного рефлекса" Width="200">
            <DataGridTemplateColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                Value="Действия запускаемые исходным безусловным рефлексом"/>
              </Style>
            </DataGridTemplateColumn.HeaderStyle>

            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding AdaptiveActions, Converter={StaticResource IdListToNamesConverter}, ConverterParameter='AdaptiveActions'}"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>

          <!-- Крепость связи -->
          <DataGridTextColumn Header="Крепость" 
                  Binding="{Binding AssociationStrength, StringFormat=F2}" 
                  Width="80"
                  IsReadOnly="True">
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                    Value="Крепость ассоциативной связи. [0, 1]"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
          </DataGridTextColumn>

          <!-- Время последней активации -->
          <DataGridTextColumn Header="Последняя активация" 
                  Binding="{Binding LastActivation}" 
                  Width="120"
                  IsReadOnly="True">
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                    Value="Время последней активации (в пульсах)"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
          </DataGridTextColumn>

          <!-- ID исходного рефлекса -->
          <DataGridTextColumn Header="Исходный рефлекс" 
                  Binding="{Binding SourceGeneticReflexId}" 
                  Width="*"
                  IsReadOnly="True">
            <DataGridTextColumn.HeaderStyle>
              <Style TargetType="DataGridColumnHeader">
                <Setter Property="ToolTip" 
                    Value="ID исходного безусловного рефлекса"/>
              </Style>
            </DataGridTextColumn.HeaderStyle>
          </DataGridTextColumn>
        </DataGrid.Columns>
      </DataGrid>

    </Border>

    <!-- Кнопки управления -->
    <Grid Grid.Row="4" Margin="0,0,0,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
        <TextBlock Text="{Binding DisplayCountText}"
                   Margin="0,0,15,0"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"/>
        <Button Content="Настройки"
                    Command="{Binding OpenSettingsCommand}"
                    IsEnabled="{Binding IsDeletionEnabled}"
                    Style="{StaticResource ActionButtonStyle}"
                    ToolTip="Настройки условных рефлексов"
                    Margin="8,0,15,0"
                    Cursor="Hand"/>
        <Button Content="Создать по шаблону"
                        Command="{Binding OpenTemplateCommand}"
                        IsEnabled="{Binding IsTemplateCreationEnabled}"
                        Style="{StaticResource ActionButtonStyle}"
                        ToolTip="Создать условные рефлексы по шаблону (только стадия 1)"
                        Margin="0,0,10,0"
                        Cursor="Hand" HorizontalAlignment="Left"/>

        <!-- Текст предупреждения -->
        <TextBlock Grid.Column="0"
                       Text="Таблица условных рефлексов доступна только для просмотра и удаления"
                       Foreground="#FF333333"
                       FontStyle="Italic"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"
                       TextWrapping="Wrap"/>
      </StackPanel>

      <!-- Кнопки -->
      <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
        <Button Content="Очистить"
                        Command="{Binding RemoveAllCommand}"
                        IsEnabled="{Binding IsDeletionEnabled}"
                        Style="{StaticResource RedButtonStyle}"
                        ToolTip="Удалить все условные рефлексы агента"/>
      </StackPanel>
    </Grid>

  </Grid>
</UserControl>