<Window x:Class="AIStudio.Dialogs.BehaviorStylesSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор комбинации стилей поведения" 
        Height="200" Width="800"
        WindowStartupLocation="CenterOwner"
        PreviewKeyDown="Window_PreviewKeyDown">

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Text="Выберите комбинацию стилей поведения:" 
                   Margin="0,0,0,10" FontWeight="Bold"/>

    <ComboBox x:Name="BehaviorStylesComboBox" Grid.Row="1" 
          SelectedValuePath="StyleIds"
          ToolTipService.ShowOnDisabled="True"
          Margin="0,0,0,10" Height="30">
      <ComboBox.ItemContainerStyle>
        <Style TargetType="ComboBoxItem">
          <Setter Property="ToolTip" Value="{Binding Description}"/>
        </Style>
      </ComboBox.ItemContainerStyle>
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>

    <TextBlock x:Name="StatusText" Grid.Row="3" Margin="0,10,0,5" 
                   FontStyle="Italic" Foreground="Gray" TextWrapping="Wrap"/>

    <!--<Button x:Name="GenerateButton" Grid.Row="3" Content="Сформировать" 
                HorizontalAlignment="Right" Margin="0,10,0,5" Width="120"
                Click="GenerateCombinationsButton_Click"/>-->

    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button x:Name="GenerateButton" Content="Сформировать" Width="100" Margin="0,0,10,0" Click="GenerateCombinationsButton_Click" HorizontalAlignment="Left"/>
      <Button Content="Применить" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
      <Button Content="Закрыть" Width="80" Click="CancelButton_Click"/>
    </StackPanel>
  </Grid>
</Window>