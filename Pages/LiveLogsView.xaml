<UserControl x:Class="AIStudio.Pages.LiveLogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

  <UserControl.Resources>
    <!-- Стиль для текста матрицы -->
    <Style x:Key="MatrixTextStyle" TargetType="TextBlock">
      <Setter Property="Foreground" Value="#FF00FF00"/>
      <Setter Property="FontFamily" Value="Consolas, Courier New"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для заголовков колонок DataGrid -->
    <Style x:Key="MatrixHeaderStyle" TargetType="DataGridColumnHeader">
      <Setter Property="Foreground" Value="#FFFFFF00"/>
      <Setter Property="FontFamily" Value="Consolas, Courier New"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="Background" Value="#101010"/>
      <Setter Property="BorderBrush" Value="#00FF00"/>
      <Setter Property="BorderThickness" Value="0,0,1,1"/>
      <Setter Property="Padding" Value="5,3"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для ячеек DataGrid -->
    <Style x:Key="MatrixCellStyle" TargetType="DataGridCell">
      <Setter Property="Foreground" Value="#FF00FF00"/>
      <Setter Property="FontFamily" Value="Consolas, Courier New"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderBrush" Value="#202020"/>
      <Setter Property="BorderThickness" Value="0,0,1,1"/>
      <Setter Property="Padding" Value="5,3"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="DataGridCell">
            <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
              <ContentPresenter VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsSelected" Value="True">
          <Setter Property="Background" Value="#2000FF00"/>
          <Setter Property="Foreground" Value="#FFFFFF"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <!-- Стиль для строк таблицы -->
    <Style x:Key="MatrixRowStyle" TargetType="DataGridRow">
      <Setter Property="Background" Value="Transparent"/>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#1000FF00"/>
        </Trigger>
        <Trigger Property="IsSelected" Value="True">
          <Setter Property="Background" Value="#3000FF00"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <!-- Стиль для кнопок матрицы -->
    <Style x:Key="MatrixButtonStyle" TargetType="Button">
      <Setter Property="Background" Value="#002000"/>
      <Setter Property="Foreground" Value="#00FF00"/>
      <Setter Property="BorderBrush" Value="#00FF00"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="10,5"/>
      <Setter Property="FontFamily" Value="Consolas"/>
      <Setter Property="FontSize" Value="11"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#004000"/>
          <Setter Property="Foreground" Value="#80FF80"/>
        </Trigger>
        <Trigger Property="IsPressed" Value="True">
          <Setter Property="Background" Value="#006000"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <!-- Стиль для самого DataGrid -->
    <Style x:Key="MatrixDataGridStyle" TargetType="DataGrid">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Foreground" Value="#00FF00"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="HeadersVisibility" Value="Column"/>
      <Setter Property="RowBackground" Value="Transparent"/>
      <Setter Property="AlternatingRowBackground" Value="#080808"/>
      <Setter Property="GridLinesVisibility" Value="None"/>
      <Setter Property="HorizontalGridLinesBrush" Value="Transparent"/>
      <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
      <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
      <Setter Property="ScrollViewer.PanningMode" Value="Both"/>
      <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
    </Style>

    <!-- Стиль для ToolTip в стиле матрицы -->
    <Style x:Key="MatrixToolTipStyle" TargetType="ToolTip">
      <Setter Property="Background" Value="#202020"/>
      <Setter Property="BorderBrush" Value="#00FF00"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Foreground" Value="#00FF00"/>
      <Setter Property="FontFamily" Value="Consolas"/>
      <Setter Property="FontSize" Value="10"/>
      <Setter Property="Padding" Value="8,4"/>
    </Style>
  </UserControl.Resources>

  <Grid Background="Black">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <Border Grid.Row="0" Background="#101010" Padding="10" BorderBrush="#00FF00" BorderThickness="0,0,0,1">
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="ЛОГИ СИСТЕМЫ" 
                         Foreground="#00FF00"
                         FontFamily="Consolas, Courier New"
                         FontSize="16"
                         FontWeight="Bold"
                         VerticalAlignment="Center"/>

        <Rectangle Width="20" Height="2" Fill="#00FF00" Margin="20,0,0,0" VerticalAlignment="Center"/>

        <TextBlock Text="{Binding AutoRefreshStatus}" 
                         Foreground="{Binding AutoRefreshColor}"
                         FontFamily="Consolas"
                         FontSize="11"
                         VerticalAlignment="Center"
                         Margin="10,0,0,0"/>
      </StackPanel>
    </Border>

    <!-- Таблица логов -->
    <Border Grid.Row="1" Margin="5" BorderBrush="#00FF00" BorderThickness="1" Background="#080808">
      <DataGrid ItemsSource="{Binding LogEntries}"
                      Style="{StaticResource MatrixDataGridStyle}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      RowStyle="{StaticResource MatrixRowStyle}"
                      CellStyle="{StaticResource MatrixCellStyle}"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Extended">

        <DataGrid.Columns>
          <DataGridTextColumn Binding="{Binding DisplayTime}" Width="100">
            <DataGridTextColumn.Header>
              <DataGridColumnHeader Style="{StaticResource MatrixHeaderStyle}" 
                                  Content="Время"
                                  ToolTip="Время создания записи лога"/>
            </DataGridTextColumn.Header>
          </DataGridTextColumn>

          <DataGridTextColumn Binding="{Binding DisplayPulse}" Width="60">
            <DataGridTextColumn.Header>
              <DataGridColumnHeader Style="{StaticResource MatrixHeaderStyle}" 
                                  Content="Пульс"
                                  ToolTip="Номер пульса системы"/>
            </DataGridTextColumn.Header>
          </DataGridTextColumn>

          <DataGridTextColumn Binding="{Binding DisplayBaseID}" Width="70">
            <DataGridTextColumn.Header>
              <DataGridColumnHeader Style="{StaticResource MatrixHeaderStyle}" 
                                  Content="Состояние"
                                  ToolTip="ID базового состояния гомеостаза агента"/>
            </DataGridTextColumn.Header>
          </DataGridTextColumn>

          <DataGridTextColumn Binding="{Binding DisplayBaseStyleID}" Width="60">
            <DataGridTextColumn.Header>
              <DataGridColumnHeader Style="{StaticResource MatrixHeaderStyle}" 
                                  Content="Стиль"
                                  ToolTip="ID образа стилей поведения"/>
            </DataGridTextColumn.Header>
          </DataGridTextColumn>

          <DataGridTextColumn Binding="{Binding DisplayTriggerStimulusID}" Width="70">
            <DataGridTextColumn.Header>
              <DataGridColumnHeader Style="{StaticResource MatrixHeaderStyle}" 
                                  Content="Триггер"
                                  ToolTip="ID образа пускового стимула"/>
            </DataGridTextColumn.Header>
          </DataGridTextColumn>

          <DataGridTextColumn Binding="{Binding DisplayGeneticReflexID}" Width="90">
            <DataGridTextColumn.Header>
              <DataGridColumnHeader Style="{StaticResource MatrixHeaderStyle}" 
                                  Content="Б/у рефлекс"
                                  ToolTip="ID безусловного рефлекса"/>
            </DataGridTextColumn.Header>
          </DataGridTextColumn>

          <DataGridTextColumn Binding="{Binding DisplayConditionReflexID}" Width="90">
            <DataGridTextColumn.Header>
              <DataGridColumnHeader Style="{StaticResource MatrixHeaderStyle}" 
                                  Content="Усл. рефлекс"
                                  ToolTip="ID условного рефлекса"/>
            </DataGridTextColumn.Header>
          </DataGridTextColumn>
        </DataGrid.Columns>
      </DataGrid>
    </Border>

    <!-- Панель управления -->
    <Border Grid.Row="2" Background="#101010" Padding="10" BorderBrush="#00FF00" BorderThickness="0,1,0,0">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Content="ОЧИСТИТЬ" 
                        Command="{Binding ClearLogsCommand}"
                        Style="{StaticResource MatrixButtonStyle}"
                        ToolTip="Очистить все логи"/>

        <Button Content="{Binding AutoRefreshStatus}" 
                        Command="{Binding ToggleAutoRefreshCommand}"
                        Style="{StaticResource MatrixButtonStyle}"
                        ToolTip="Включить/выключить автообновление"
                        Margin="10,0,0,0"/>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>