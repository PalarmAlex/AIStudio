<UserControl x:Class="AIStudio.Pages.AntagonistMatrixView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:AIStudio.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

  <UserControl.Resources>
    <converters:MatrixColumnsConverter x:Key="MatrixColumnsConverter"/>
    <converters:CollectionCountToVisibilityConverter x:Key="CollectionCountToVisibilityConverter"/>

    <Style x:Key="MatrixTextStyle" TargetType="TextBlock">
      <Setter Property="FontFamily" Value="Consolas, Courier New"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="MatrixButtonStyle" TargetType="Button">
      <Setter Property="Background" Value="#002000"/>
      <Setter Property="Foreground" Value="#00FF00"/>
      <Setter Property="BorderBrush" Value="#00FF00"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="10,5"/>
      <Setter Property="FontFamily" Value="Consolas"/>
      <Setter Property="FontSize" Value="11"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="2">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#004000"/>
          <Setter Property="Foreground" Value="#80FF80"/>
        </Trigger>
        <Trigger Property="IsPressed" Value="True">
          <Setter Property="Background" Value="#006000"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <Style x:Key="CellButtonStyle" TargetType="Button">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style x:Key="WarningTextStyle" TargetType="TextBlock">
      <Setter Property="Foreground" Value="#FFFF0000"/>
      <Setter Property="FontFamily" Value="Consolas"/>
      <Setter Property="FontSize" Value="11"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
  </UserControl.Resources>

  <Grid Background="Black">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <Border Grid.Row="0" Background="#101010" Padding="10" BorderBrush="#00FF00" BorderThickness="0,0,0,1">
      <StackPanel Orientation="Horizontal">
        <Button Content="← НАЗАД" 
                Command="{Binding BackCommand}"
                Style="{StaticResource MatrixButtonStyle}"
                Margin="0,0,20,0"/>

        <TextBlock Text="МАТРИЦА АНТАГОНИСТИЧЕСКИХ СВЯЗЕЙ" 
                   Foreground="#00FF00"
                   FontFamily="Consolas, Courier New"
                   FontSize="16"
                   FontWeight="Bold"
                   VerticalAlignment="Center"/>
      </StackPanel>
    </Border>

    <!-- Матрица -->
    <ScrollViewer Grid.Row="1" 
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Auto"
                  Background="Black">
      <ItemsControl ItemsSource="{Binding MatrixCells}" 
                    Background="Black"
                    BorderThickness="0">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <UniformGrid Columns="{Binding MatrixCells.Count, Converter={StaticResource MatrixColumnsConverter}}"
                         Background="Black"/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Width="60" Height="40"
                    Background="{Binding BackgroundColor}"
                    BorderBrush="{Binding BorderColor}"
                    BorderThickness="1"
                    ToolTip="{Binding ToolTip}">
                <Button Style="{StaticResource CellButtonStyle}"
                        Click="CellButton_Click"
                      DataContext="{Binding}">
                  <TextBlock Text="{Binding Content}" 
                             Foreground="{Binding TextColor}"
                             FontFamily="Consolas, Courier New"
                             FontSize="14"
                             FontWeight="Normal"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"/>
                </Button>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>

    <!-- Легенда -->
    <Border Grid.Row="2" Background="#101010" Padding="10" BorderBrush="#00FF00" BorderThickness="0,1,0,0">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
          <Border Width="20" Height="20" BorderBrush="#00FF00" BorderThickness="1" Background="#005000" Margin="0,0,5,0"/>
          <TextBlock Text="Антагонистическая пара" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
          <Border Width="20" Height="20" BorderBrush="#00FF00" BorderThickness="1" Background="#800000" Margin="0,0,5,0"/>
          <TextBlock Text="Стиль без пары" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <Border Width="20" Height="20" BorderBrush="#00FF00" BorderThickness="1" Background="#808000" Margin="0,0,5,0"/>
          <TextBlock Text="Выделенная пара" Foreground="#00FF00" FontFamily="Consolas" FontSize="11"/>
        </StackPanel>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>