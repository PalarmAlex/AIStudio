<UserControl x:Class="AIStudio.Pages.AgentAdaptiveActionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:AIStudio.Converters"
             mc:Ignorable="d"
             Height="Auto" Width="Auto"
             x:Name="Root">


  <UserControl.Resources>
    <converters:IsActiveActionMultiConverter x:Key="IsActiveActionMultiConverter"/>
    <converters:SignificanceConverter x:Key="SignificanceConverter"/>
    <converters:ActionSizeConverter x:Key="ActionSizeConverter"/>
    <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
    <converters:ActionDisplayTextConverter x:Key="ActionDisplayTextConverter"/>

    <Style x:Key="NoAdaptationTextStyle" TargetType="TextBlock">
      <Setter Property="Foreground" Value="#FFA0A0A0"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontStyle" Value="Italic"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="10"/>
    </Style>

    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
      <Setter Property="Foreground" Value="#FF404040"/>
      <Setter Property="FontSize" Value="16"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- Общий шаблон для отображения действий -->
    <DataTemplate x:Key="ActionItemTemplate">
      <Grid>
        <TextBlock x:Name="ActionText"
            Text="{Binding ., Converter={StaticResource ActionDisplayTextConverter}}"
            FontSize="{Binding ., Converter={StaticResource ActionSizeConverter}}"
            FontWeight="SemiBold"
            Margin="3,1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

          <TextBlock.Foreground>
            <MultiBinding Converter="{StaticResource IsActiveActionMultiConverter}">
              <Binding Path="DataContext.CurrentActiveActions" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
              <Binding Path="."/>
            </MultiBinding>
          </TextBlock.Foreground>

          <TextBlock.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
          </TextBlock.RenderTransform>

          <TextBlock.Style>
            <Style TargetType="TextBlock">
              <Style.Triggers>
                <DataTrigger Value="True">
                  <DataTrigger.Binding>
                    <MultiBinding Converter="{StaticResource IsActiveActionMultiConverter}">
                      <Binding Path="DataContext.CurrentActiveActions" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                      <Binding Path="."/>
                    </MultiBinding>
                  </DataTrigger.Binding>
                  <DataTrigger.EnterActions>
                    <BeginStoryboard x:Name="PulseStoryboard">
                      <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(ScaleTransform.ScaleX)"
                                                           From="1" To="1.05" 
                                                           Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(ScaleTransform.ScaleY)"
                                                           From="1" To="1.05" 
                                                           Duration="0:0:1"/>
                      </Storyboard>
                    </BeginStoryboard>
                  </DataTrigger.EnterActions>
                  <DataTrigger.ExitActions>
                    <StopStoryboard BeginStoryboardName="PulseStoryboard"/>
                  </DataTrigger.ExitActions>
                </DataTrigger>
              </Style.Triggers>
            </Style>
          </TextBlock.Style>
        </TextBlock>
      </Grid>
    </DataTemplate>

  </UserControl.Resources>

  <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
    <StackPanel>
       <!--Сообщение когда нет активных действий вообще--><!-- 
      <TextBlock Text="Адаптации не требуется, все в пределах нормы"
        Style="{StaticResource NoAdaptationTextStyle}"
        Visibility="{Binding CurrentActiveActions.Count, Converter={StaticResource IntToVisibilityConverter}, FallbackValue=Collapsed}"/>-->

      <!-- Таблица с тремя колонками -->
      <Grid Margin="0,10">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Строка заголовков -->
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Колонка 1: Корректирующие действия -->
        <StackPanel Grid.Column="0" Grid.Row="0">
          <TextBlock Text="Корректирующие действия" Style="{StaticResource SectionHeaderStyle}"/>
        </StackPanel>

        <!-- Колонка 2: Безусловные рефлексы -->
        <StackPanel Grid.Column="1" Grid.Row="0">
          <TextBlock Text="Безусловные рефлексы" Style="{StaticResource SectionHeaderStyle}"/>
        </StackPanel>

        <!-- Колонка 3: Условные рефлексы -->
        <StackPanel Grid.Column="2" Grid.Row="0">
          <TextBlock Text="Условные рефлексы" Style="{StaticResource SectionHeaderStyle}"/>
        </StackPanel>

        <!-- Строка с действиями -->

        <!-- Колонка 1: Корректирующие действия -->
        <Border Grid.Column="0" Grid.Row="1" BorderThickness="0,1,1,0" BorderBrush="#FFE0E0E0" Padding="5">
          <StackPanel>
            <TextBlock Text="Нет активных корректирующих действий"
                  Style="{StaticResource NoAdaptationTextStyle}"
                  Visibility="{Binding ElementaryActions.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=true}"/>

            <ItemsControl ItemsSource="{Binding ElementaryActions}" ItemTemplate="{StaticResource ActionItemTemplate}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
            </ItemsControl>
          </StackPanel>
        </Border>

        <!-- Колонка 2: Безусловные рефлексы -->
        <Border Grid.Column="1" Grid.Row="1" BorderThickness="0,1,1,0" BorderBrush="#FFE0E0E0" Padding="5">
          <StackPanel>
            <TextBlock Text="Нет активных безусловных рефлексов"
                  Style="{StaticResource NoAdaptationTextStyle}"
                  Visibility="{Binding GeneticReflexActions.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=true}"/>

            <ItemsControl ItemsSource="{Binding GeneticReflexActions}" ItemTemplate="{StaticResource ActionItemTemplate}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
            </ItemsControl>
          </StackPanel>
        </Border>

        <!-- Колонка 3: Условные рефлексы -->
        <Border Grid.Column="2" Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="#FFE0E0E0" Padding="5">
          <StackPanel>
            <TextBlock Text="Нет активных условных рефлексов"
                  Style="{StaticResource NoAdaptationTextStyle}"
                  Visibility="{Binding ConditionedReflexActions.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=true}"/>

            <ItemsControl ItemsSource="{Binding ConditionedReflexActions}" ItemTemplate="{StaticResource ActionItemTemplate}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
            </ItemsControl>
          </StackPanel>
        </Border>
      </Grid>
    </StackPanel>
  </ScrollViewer>
</UserControl>