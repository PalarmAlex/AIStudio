<UserControl x:Class="AIStudio.Pages.Automatizm.AutomatizmTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:AIStudio.ViewModels"
             xmlns:converters="clr-namespace:AIStudio.Converters"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="1200">

  <UserControl.Resources>
    <converters:CollectionCountToVisibilityConverter x:Key="CollectionCountToVisibilityConverter"/>

    <!-- Блок автоматизма: многострочный текст, первая строка жирная если IsFirstInList -->
    <DataTemplate DataType="{x:Type vm:AutomatizmLineItem}">
      <TextBlock Text="{Binding DisplayText}" TextWrapping="Wrap" Margin="0,2,0,6" VerticalAlignment="Top">
        <TextBlock.Style>
          <Style TargetType="TextBlock">
            <Style.Triggers>
              <DataTrigger Binding="{Binding IsFirstInList}" Value="True">
                <Setter Property="FontWeight" Value="Bold"/>
              </DataTrigger>
            </Style.Triggers>
          </Style>
        </TextBlock.Style>
      </TextBlock>
    </DataTemplate>

    <!-- Узел дерева: подзаголовок + дочерние узлы + блок "Автоматизмы:" и список у листа -->
    <HierarchicalDataTemplate x:Key="NodeTemplate" DataType="{x:Type vm:AutomatizmTreeNodeItem}"
                              ItemsSource="{Binding Children}">
      <StackPanel>
        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#FF333333" TextWrapping="Wrap" Margin="0,2,0,2"/>
        <StackPanel Margin="20,4,0,4" Visibility="{Binding AutomatizmLines.Count, Converter={StaticResource CollectionCountToVisibilityConverter}}">
          <TextBlock Text="Автоматизмы:" FontWeight="SemiBold" Margin="0,4,0,2" Foreground="#FF333333"/>
          <ItemsControl ItemsSource="{Binding AutomatizmLines}">
            <ItemsControl.ItemContainerStyle>
              <Style TargetType="ContentPresenter">
                <Setter Property="Margin" Value="0,0,0,0"/>
              </Style>
            </ItemsControl.ItemContainerStyle>
          </ItemsControl>
        </StackPanel>
      </StackPanel>
    </HierarchicalDataTemplate>
  </UserControl.Resources>

  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <TextBlock Grid.Row="0"
               Text="{Binding PageTitle}"
               FontSize="18"
               FontWeight="SemiBold"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"
               Foreground="#FF333333"/>

    <!-- Панель фильтров -->
    <Border Grid.Row="1"
            BorderBrush="#FFE0E0E0"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,10"
            Padding="5"
            Background="#FFF5F5F5">
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Фильтры:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   FontWeight="Bold"/>

        <StackPanel Orientation="Vertical" Margin="0,0,15,0" Width="160">
          <TextBlock Text="Эмоции" FontSize="12" Margin="0,0,0,2"/>
          <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                    ItemsSource="{Binding StyleFilterOptions}"
                    SelectedValue="{Binding SelectedStyleFilter}"
                    DisplayMemberPath="Value"
                    SelectedValuePath="Key"
                    Height="25" Cursor="Hand"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,15,0" Width="170">
          <TextBlock Text="Действия восприятия" FontSize="12" Margin="0,0,0,2"/>
          <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                    ItemsSource="{Binding PerceptionActionFilterOptions}"
                    SelectedValue="{Binding SelectedPerceptionActionFilterId}"
                    DisplayMemberPath="Value"
                    SelectedValuePath="Key"
                    Height="25"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,15,0" Width="170">
          <TextBlock Text="Действия автоматизма" FontSize="12" Margin="0,0,0,2"/>
          <ComboBox Style="{StaticResource AgentComboBoxStyle}"
                    ItemsSource="{Binding ActionFilterOptions}"
                    SelectedValue="{Binding SelectedActionFilterId}"
                    DisplayMemberPath="Value"
                    SelectedValuePath="Key"
                    Height="25"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,15,0" Width="140">
          <TextBlock Text="Фраза восприятия" FontSize="12" Margin="0,0,0,2"/>
          <TextBox Style="{StaticResource AgentFilterTextBoxStyle}"
                   Text="{Binding FilterPhrasePerception, UpdateSourceTrigger=PropertyChanged}"
                   Height="25"
                   ToolTip="Поиск по вхождению текста в фразу образа восприятия"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,15,0" Width="140">
          <TextBlock Text="Фраза автоматизма" FontSize="12" Margin="0,0,0,2"/>
          <TextBox Style="{StaticResource AgentFilterTextBoxStyle}"
                   Text="{Binding FilterPhrase, UpdateSourceTrigger=PropertyChanged}"
                   Height="25"
                   ToolTip="Поиск по вхождению текста в фразу образа действия"/>
        </StackPanel>

        <Button Content="Сбросить фильтры"
                Command="{Binding ClearFiltersCommand}"
                Style="{StaticResource AgentButtonStyle}"
                Margin="10,15,0,0"
                Height="30"
                Width="150"
                Cursor="Hand"
                HorizontalAlignment="Right"/>
      </StackPanel>
    </Border>

    <!-- Три колонки: Плохо | Норма | Хорошо, под каждой — дерево вниз -->
    <Border Grid.Row="2"
            BorderBrush="#FFE0E0E0"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Background="White">
      <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding RootNodes}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <StackPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type vm:AutomatizmTreeNodeItem}">
              <Border BorderBrush="#FFE0E0E0" BorderThickness="1" CornerRadius="4" Margin="4" Padding="8"
                      MinWidth="280" VerticalAlignment="Stretch">
                <StackPanel>
                  <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="#FF333333" Margin="0,0,0,8"/>
                  <TreeView ItemsSource="{Binding Children}"
                            ItemTemplate="{StaticResource NodeTemplate}"
                            BorderThickness="0"
                            Background="Transparent">
                    <TreeView.ItemContainerStyle>
                      <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="True"/>
                        <Setter Property="Margin" Value="0,2,0,2"/>
                      </Style>
                    </TreeView.ItemContainerStyle>
                  </TreeView>
                </StackPanel>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Border>
  </Grid>
</UserControl>
