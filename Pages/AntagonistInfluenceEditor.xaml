<Window x:Class="AIStudio.Pages.AntagonistInfluenceEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" 
        Width="400" Height="500"
        WindowStartupLocation="CenterOwner"
        PreviewKeyDown="Window_PreviewKeyDown">

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <ListBox x:Name="InfluenceListBox" Grid.Row="0" SelectionMode="Multiple">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <CheckBox Content="{Binding DisplayText}" IsChecked="{Binding IsSelected}"/>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Content="Применить" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
      <Button Content="Отмена" Width="80" Click="CancelButton_Click"/>
    </StackPanel>
  </Grid>
</Window>
