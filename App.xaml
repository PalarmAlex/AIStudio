<Application x:Class="AIStudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AIStudio"
             xmlns:converters="clr-namespace:AIStudio.Converters"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
        <ResourceDictionary Source="/Styles/ComboBoxStiles.xaml"/>
      </ResourceDictionary.MergedDictionaries>

      <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
      <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
      <converters:ListToStringConverter x:Key="ListToStringConverter"/>
      <converters:StyleAntagonismValidationRule x:Key="StyleAntagonismValidationRule"/>
      <converters:StyleActivationValidationRule x:Key="StyleActivationValidationRule"/>
    </ResourceDictionary>
  </Application.Resources>
</Application>
